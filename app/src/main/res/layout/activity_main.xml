<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        //logo
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:background="#808080"
            android:src="@drawable/appflag"
            android:id="@+id/logo"/>
        //business photo
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/logo"
            android:background="#808080"
            android:src="@drawable/kebab"
            android:id="@+id/bisuness_image"/>
        //business name
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:text="Buenos Pinchos"
            android:textSize="25dp"
            android:layout_below="@id/bisuness_image"
            android:id="@+id/bisuness_name"/>
        //website
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_below="@id/bisuness_name"
            android:id="@+id/bisuness_url">

            //content
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/web_icon"
                android:layout_weight="1"
                android:id="@+id/url_icon"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="URL: www.bpinchos.com"
                android:textSize="15dp"
                android:layout_weight="1"
                android:id="@+id/url_txt"/>

        </LinearLayout>
        //phone number
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_below="@id/bisuness_url"
            android:id="@+id/bisuness_phone">

            //content
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/phone_icon"
                android:layout_weight="1"
                android:id="@+id/phone_icon"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Phone: 1-787-258-6666"
                android:textSize="15dp"
                android:layout_weight="1"
                android:id="@+id/phone_txt"/>

        </LinearLayout>
        //location
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_below="@id/bisuness_phone"
            android:id="@+id/bisuness_address">

            //content
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/location_icon"
                android:layout_weight="1"
                android:id="@+id/address_icon"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="6545 Ave. Emilio Fagot, Ponce"
                android:layout_weight="1"
                android:id="@+id/address_txt"/>

        </LinearLayout>

        //business hours
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="horizontal"
            android:layout_below="@id/bisuness_address"
            android:layout_alignParentBottom="true"
            android:id="@+id/bisuness_hours">

            //content
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/hours"
                android:textSize="25dp"
                android:textAlignment="center"
                android:layout_weight="1"
                android:id="@+id/hours_txt"/>

        </LinearLayout>


    </RelativeLayout>

</ScrollView>